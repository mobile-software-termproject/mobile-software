<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainred"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="500dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="225dp"
                android:layout_height="35dp"
                android:layout_marginLeft="93dp"
                android:onClick="dietEnter"
                app:srcCompat="@drawable/savemain" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="225dp"
            android:layout_marginLeft="93dp"
            android:layout_height="35dp"
            android:onClick="dietShowing"
            app:srcCompat="@drawable/gotolistmain" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:layout_marginLeft="93dp"
            android:onClick="dietAnalysis"
            app:srcCompat="@drawable/analysismain" />
        </LinearLayout>

</LinearLayout>
